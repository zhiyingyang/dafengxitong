<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="My_CheckBox" parent="@android:style/Widget.Material.CompoundButton.CheckBox">
        <item name="android:colorControlActivated">@color/colorLogin</item>

    </style>

    <style name="carbon_CheckBox" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:button">@null</item>
        <item name="carbon_checkColor">@drawable/carbon_checkradiocolor</item>
        <item name="android:drawablePadding">16dp</item>
    </style>

    <style name="carbon_RadioButton" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:button">@null</item>
        <item name="carbon_radioColor">@drawable/carbon_checkradiocolor</item>
        <item name="android:drawablePadding">16dp</item>
    </style>


</resources>
