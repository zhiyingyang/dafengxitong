<?xml version="1.0" encoding="utf-8"?>
<com.yikaobao.view.percentsuppor.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.yikaobao.view.percentsuppor.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        app:layout_heightPercent="@string/app_dp_40"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_score_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:text="测试题目"
            android:textColor="@color/colorBlack"
            app:layout_paddingPercent="@string/app_dp_4"
             />

        <ImageButton
            android:id="@+id/item_score_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_up"
            app:layout_heightPercent="@string/app_dp_25"
            android:layout_toLeftOf="@+id/item_score_down"
            app:layout_marginRightPercent="@string/app_dp_10"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            app:layout_widthPercent="@string/app_dp_25" />

        <ImageButton
            android:id="@+id/item_score_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/icon_down"
            android:layout_centerVertical="true"
            app:layout_heightPercent="@string/app_dp_25"
            app:layout_marginRightPercent="@string/app_dp_10"
            android:visibility="gone"
            app:layout_widthPercent="@string/app_dp_25" />


    </com.yikaobao.view.percentsuppor.PercentRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:layout_heightPercent="@string/app_dp_1" />

</com.yikaobao.view.percentsuppor.PercentRelativeLayout>
