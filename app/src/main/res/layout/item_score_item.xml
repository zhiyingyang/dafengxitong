<?xml version="1.0" encoding="utf-8"?>
<com.yikaobao.view.percentsuppor.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_select_room_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.yikaobao.view.percentsuppor.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        app:layout_heightPercent="@string/app_dp_60">

        <TextView
            android:id="@+id/item_score_item"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="项目名称"
            android:textColor="@color/colorBlack"
            app:layout_marginLeftPercent="@string/app_dp_15"
            app:layout_textSizePercent="@string/app_dp_18"
            app:layout_widthPercent="@string/app_dp_180" />

        <TextView
            android:id="@+id/item_score_ev"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="考官"
            android:textColor="@color/colorBule1"
            app:layout_textSizePercent="@string/app_dp_18"
            app:layout_widthPercent="@string/app_dp_180" />

    </com.yikaobao.view.percentsuppor.PercentRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorGray"
        app:layout_heightPercent="@string/app_dp_1" />

</com.yikaobao.view.percentsuppor.PercentLinearLayout>